@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<h1>TELA DE EQUIPES</h1>

<form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label for="">Nome</label>
    <input type="text" name="Nome" required>

    <label for="">Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">
    <thead class="table table-striped table-responsive">
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td>
                    <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="70px">
                </td>
                <td> @* asp-controller = Definindo qual classe do controller será usada  *@
                    @* asp-action = Qual método será utilizado dentro da classe *@
                    @* asp-route-id = Definindo que o id do hyperlink será o mesmo id da equipe semelhante a da coluna *@
                    <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Equipe"  asp-action="Editar" asp-route-id="@equipe.IdEquipe">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table> 