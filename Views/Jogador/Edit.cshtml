@model Jogador

@{
    ViewData["Title"] = "Edit";
    
}

<h1>Edição de Jogadores</h1>

<form method="post" action='@Url.Action("Atualizar")' enctype="multipart/form-data">
    @* O input abaixo está escondido através do type'hidden'  *@
    <input type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">

    <label for="">Nome</label>
    <input type="text" name="Nome" value="@ViewBag.Jogador.Nome" required>

    <label for="">E-mail</label>
    <input type="email" name="Email" value="@ViewBag.Jogador.Email">

    <label for="">Senha</label>
    <input type="password" name="Senha" value="@ViewBag.Jogador.Senha">

    <label for="">Equipe</label>
    <input type="text" name="Equipe" value="@ViewBag.Jogador.Equipe.Nome">

    <button type="submit">Atualizar</button>
</form>
